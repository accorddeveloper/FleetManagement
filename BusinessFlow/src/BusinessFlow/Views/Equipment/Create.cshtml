@model BusinessFlow.Models.Equipment

@{
    Layout = "_Layout";
    ViewBag.Title = "Create Equipment";
}
<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.EditorFor(x => x.Name)
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Make)
            @Html.EditorFor(x => x.Make)
            @Html.ValidationMessageFor(x => x.Make)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Model)
            @Html.EditorFor(x => x.Model)
            @Html.ValidationMessageFor(x => x.Model)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Year)
            @Html.EditorFor(x => x.Year)
            @Html.ValidationMessageFor(x => x.Year)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Type)
            @Html.EditorFor(x => x.Type)
            @Html.ValidationMessageFor(x => x.Type)
        </div>

        <button class="btn btn-default" type="submit">Add Part to Inventory</button>
    </div>
}
